<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:text="Samsung XYZ"
		android:id="@+id/tPhone"
		android:layout_marginLeft="16dp"
		android:layout_marginTop="16dp" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceMedium"
		android:text="David Moeljadi, +65 9390 1772, davidmoeljadi@gmail.com"
		android:id="@+id/tContacts"
		android:layout_marginLeft="16dp"
		android:layout_marginTop="8dp" />

	<LinearLayout
		android:orientation="horizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical">

		<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Delivered"
			android:id="@+id/bDelivered"
			android:padding="16dp"
			android:layout_marginLeft="16dp"
			android:elevation="4dp"
			android:background="@drawable/custom_btn"
			android:textColor="#fff" />

		<ImageView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/imgTick"
			android:src="@drawable/ic_action_done"
			android:tint="@color/accent"
			android:layout_marginLeft="16dp" />
	</LinearLayout>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textAppearance="?android:attr/textAppearanceSmall"
		android:text="Press Delivered when you get the phone from the seller."
		android:id="@+id/textView19"
		android:layout_marginLeft="16dp"
		android:layout_marginBottom="16dp" />
</LinearLayout>